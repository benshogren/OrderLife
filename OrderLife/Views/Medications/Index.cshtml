@model IEnumerable<OrderLife.Models.Medications>

@{
    ViewBag.Title = "Index";
}

<h2>My Medications</h2>

<p>
    @Html.ActionLink("Add New Medication to List", "Create")
</p>
<table>
    <tr>
        <th>
            Name
        </th>
        <th>
            Name of Prescriber
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
 
        <td>
            @Html.DisplayFor(modelItem => item.NameOfPrescriber)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
