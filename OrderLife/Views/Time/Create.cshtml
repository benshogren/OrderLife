@model OrderLife.Models.Appointments

@{
    ViewBag.Title = "Enter Data";
}

<h2>Add Entry</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>

        <div class="editor-label">
            <div>
                Schedule what for <b>@Html.DisplayFor(model=> model.DayName) @Html.DisplayFor(model=> model.Time):00?</b>
            </div>
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.AppointmentValue)
            @Html.ValidationMessageFor(model => model.AppointmentValue)
        </div>

        <p>
            <input type="submit" value="Add to Schedule" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("View Schedule", "Index")
</div>