@model OrderLife.Models.Appointments

@{
    ViewBag.Title = "Enter Data";
}

<h2>New Entry</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Appointments</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.Day) 
            @Html.DisplayFor(model=> model.Day)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Time)
            @Html.DisplayFor(model=> model.Time)
        </div>


        <div class="editor-label">
            @Html.LabelFor(model => model.AppointmentValue)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.AppointmentValue)
            @Html.ValidationMessageFor(model => model.AppointmentValue)
        </div>

        <p>
            <input type="submit" value="Submit" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("View Schedule", "Index")
</div>