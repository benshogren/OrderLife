@model OrderLife.Models.Appointments

@{
    ViewBag.Title = "Enter Data";
}

<h2>New Entry</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Appointments</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.Day)
        </div>
        <div class="editor-field">
          <select name="Day">
            <option value= "1" label="Sunday" / >
            <option value= "2" label="Monday" / >
            <option value= "3" label="Tuesday" / >
            <option value= "4" label="Wednesday" / >
            <option value= "5" label="Thursday" / >
            <option value= "6" label="Friday" / >
            <option value= "7" label="Saturday" / >
            </select>
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Time)
        </div>
        <div class="editor-field">
            <select name="Time">
            <option value= "1" label="1am" / >
            <option value= "2" label="2am" / >
            <option value= "3" label="3m" / >
            <option value= "4" label="4am" / >
            <option value= "5" label="5am" / >
            <option value= "6" label="6am" / >

            </select>
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.AppointmentValue)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.AppointmentValue)
            @Html.ValidationMessageFor(model => model.AppointmentValue)
        </div>

        <p>
            <input type="submit" value="Submit" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("View Schedule", "Index")
</div>